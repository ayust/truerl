{
  "manifest_version": 2,
  
  "name": "TrueRL",
  "description": "Modifies deceptive links to point to where they say they do.",
  "version": "1.0",

  "permissions": [
    "tabs", "<all_urls>"
  ],

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["truerl.js"]
    }
  ]
}
